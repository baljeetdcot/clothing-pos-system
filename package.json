{
  "name": "clothing-pos",
  "version": "1.0.0",
  "description": "Point of Sale application for clothing store",
  "main": "public/electron.js",
  "homepage": "./",
  "proxy": "http://localhost:3001",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder",
    "server": "node server.js",
    "server-prod": "node server-production.js",
    "dev": "concurrently \"npm start\" \"npm run server\"",
    "build-and-serve": "npm run build && npm run server",
    "network": "npm run build && npm run server",
    "deploy": "npm run build && npm run server-prod",
    "pm2-start": "pm2 start ecosystem.config.js",
    "pm2-stop": "pm2 stop pos-system",
    "pm2-restart": "pm2 restart pos-system",
    "pm2-logs": "pm2 logs pos-system",
    "pm2-status": "pm2 status"
  },
  "build": {
    "appId": "com.clothingpos.app",
    "productName": "Clothing Store POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@mui/x-data-grid": "^6.18.2",
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@zxing/library": "^0.21.3",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "firebase": "^10.7.1",
    "jspdf": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7",
    "typescript": "^4.9.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
